<?xml version="1.0"?>

<!DOCTYPE MODE SYSTEM "xmode.dtd">

<!--
	6502 Assembly mode by Aaron Forrest

	- Rockwell 6502 processor

-->

<MODE>

	<PROPS>
		<PROPERTY NAME="lineComment" VALUE=";" />
	</PROPS>

	<RULES HIGHLIGHT_DIGITS="TRUE" IGNORE_CASE="TRUE">
		<EOL_SPAN TYPE="COMMENT1">;</EOL_SPAN>

		<SPAN TYPE="LITERAL1" NO_LINE_BREAK="TRUE">
			<BEGIN>'</BEGIN>
			<END>'</END>
		</SPAN>

		<SPAN TYPE="LITERAL1" NO_LINE_BREAK="TRUE">
			<BEGIN>"</BEGIN>
			<END>"</END>
		</SPAN>
		
		
		<!-- labels -->
		<MARK_PREVIOUS AT_WHITESPACE_END="TRUE" 
			EXCLUDE_MATCH="TRUE" TYPE="LABEL"> </MARK_PREVIOUS>
			
		<MARK_PREVIOUS AT_WHITESPACE_END="TRUE" 
			EXCLUDE_MATCH="TRUE" TYPE="LABEL">	</MARK_PREVIOUS>
			
		
		<!-- numbers -->
		<MARK_FOLLOWING EXCLUDE_MATCH="TRUE" TYPE="DIGIT">$</MARK_FOLLOWING>
		<MARK_FOLLOWING EXCLUDE_MATCH="TRUE" TYPE="DIGIT">#</MARK_FOLLOWING>
		
		
		<!-- operators -->

		<SEQ TYPE="OPERATOR">+</SEQ>
		<SEQ TYPE="OPERATOR">-</SEQ>
		<SEQ TYPE="OPERATOR">/</SEQ>
		<SEQ TYPE="OPERATOR">*</SEQ>
		<SEQ TYPE="OPERATOR">%</SEQ>

		<SEQ TYPE="OPERATOR">|</SEQ>
		<SEQ TYPE="OPERATOR">^</SEQ>
		<SEQ TYPE="OPERATOR">&amp;</SEQ>
		<SEQ TYPE="OPERATOR">~</SEQ>
		<SEQ TYPE="OPERATOR">!</SEQ>

		<SEQ TYPE="OPERATOR">=</SEQ>
		<SEQ TYPE="OPERATOR">&lt;</SEQ>
		<SEQ TYPE="OPERATOR">&gt;</SEQ>
		<SEQ TYPE="OPERATOR">&lt;&lt;</SEQ>
		<SEQ TYPE="OPERATOR">&gt;&gt;</SEQ>
		<SEQ TYPE="OPERATOR">&lt;&gt;</SEQ>
		<SEQ TYPE="OPERATOR">==</SEQ>
		<SEQ TYPE="OPERATOR">!=</SEQ>
		<SEQ TYPE="OPERATOR">&lt;=</SEQ>
		<SEQ TYPE="OPERATOR">&gt;=</SEQ>
		<SEQ TYPE="OPERATOR">&amp;&amp;</SEQ>
		<SEQ TYPE="OPERATOR">||</SEQ>
		

		<KEYWORDS>
			<!-- assembler directives -->
			<KEYWORD1>EQU</KEYWORD1>
			<KEYWORD1>OPT</KEYWORD1>
			<KEYWORD1>ORG</KEYWORD1>
			<KEYWORD1>DTA</KEYWORD1>
			<KEYWORD1>ICL</KEYWORD1>
			<KEYWORD1>END</KEYWORD1>
